rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files, so anyone can see event posters.
    match /{allPaths=**} {
      allow read;
    }

    // Restrict write access to authenticated users.
    // A user can only write to a path that includes their own user ID.
    match /events/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
