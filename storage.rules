rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads by anyone
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes (uploads) only for authenticated users
    // and only for files under 2MB.
    match /events/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 2 * 1024 * 1024;
    }
  }
}
