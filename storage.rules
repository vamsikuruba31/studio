rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'events' folder
    match /events/{allPaths=**} {
      allow read: if true;
    }

    // Allow an authenticated user to write (create, update, delete) to a path
    // under 'events/' that starts with their own user ID.
    // Example path: /events/USER_ID/some_image.jpg
    match /events/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
