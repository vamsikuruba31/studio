rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files (e.g., event posters)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Only allow authenticated users to write files into a folder matching their user ID.
    match /events/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
