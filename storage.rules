rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads by anyone
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only for authenticated users
    // This allows users to upload event posters
    match /events/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
