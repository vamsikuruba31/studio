
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /events/{userId}/{allPaths=**} {
      // Allow read for everyone to see posters
      allow read: if true;
      // Allow write only for the authenticated user who owns the folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
