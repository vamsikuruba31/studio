
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can create an event
    // Anyone (even unauthenticated users) can read events
    match /events/{eventId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Only the user who created the event can update or delete it
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }
  }
}
