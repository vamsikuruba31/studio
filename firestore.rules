rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Events can be read by anyone, but only created, updated, or deleted by authenticated users.
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users can only read or write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}