rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read events and registrations.
    // This allows for listing all events and checking registration status.
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    match /registrations/{registrationId} {
      // Allow reading all registrations for authenticated users.
      // This is needed for functionality like checking if a user is registered for any event.
      // More specific read rules could be implemented if needed, but this is a safe starting point.
      allow read: if request.auth != null;

      // A user can only create a registration for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can't update or delete registrations through the app.
      allow update, delete: if false;
    }
  }
}
